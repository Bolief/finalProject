@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Welcome to the Combat Game</h1>
        <p class="lead">Create teams, customize characters, and battle your way to the top!</p>
    </div>

    <div class="row text-center mt-4">
        <div class="col-md-3">
            <a asp-area="User" asp-controller="Team" asp-action="Index" class="btn btn-primary btn-lg w-100">View Teams</a>
        </div>
        <div class="col-md-3">
            <a asp-area="User" asp-controller="Battle" asp-action="Index" class="btn btn-danger btn-lg w-100">Battle</a>
        </div>
        <div class="col-md-3">
            <a asp-area="User" asp-controller="Leaderboard" asp-action="Index" class="btn btn-warning btn-lg w-100">Leaderboard</a>
        </div>
    </div>
</div>
