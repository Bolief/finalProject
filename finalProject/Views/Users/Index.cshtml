@model List<User>

<h1>Users and Their Teams</h1>
<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Total Wins</th>
            <th>Teams</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.TotalWins</td>
                <td>
                    <ul>
                        @foreach (var team in user.Teams)
                        {
                            <li>@team.Name (@team.TotalWins wins)</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/" class="btn btn-primary">Back to Homepage</a>