@{
    ViewData["Title"] = $"Customize Characters for {Model.Name}";
}

<h1 class="mb-4">Customize Characters for @Model.Name</h1>

<form method="post" asp-action="Customize" asp-route-teamId="@Model.Id">
    @foreach (var character in Model.Characters)
    {
        <div class="card mb-3">
            <div class="card-header">
                <h3 class="card-title mb-0">@character.Name</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="strength-@character.Id">Strength:</label>
                    <input type="number" id="strength-@character.Id" name="updatedCharacters[@character.Id].Strength" value="@character.Strength" min="0" max="100" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="defense-@character.Id">Defense:</label>
                    <input type="number" id="defense-@character.Id" name="updatedCharacters[@character.Id].Defense" value="@character.Defense" min="0" max="100" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="speed-@character.Id">Speed:</label>
                    <input type="number" id="speed-@character.Id" name="updatedCharacters[@character.Id].Speed" value="@character.Speed" min="0" max="100" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="health-@character.Id">Health:</label>
                    <input type="number" id="health-@character.Id" name="updatedCharacters[@character.Id].Health" value="@character.Health" min="0" max="100" class="form-control" />
                </div>
            </div>
        </div>
    }
    <button type="submit" class="btn btn-success">Save Changes</button>
</form>