@{
    ViewData["Title"] = "Battle History";
}

<h1 class="mb-4">Battle History</h1>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Team 1</th>
            <th>Team 2</th>
            <th>Winner</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var battle in Model)
            {
                <tr>
                    <td>@battle.Team1.Name</td>
                    <td>@battle.Team2.Name</td>
                    <td>
                        <span class="badge badge-success">@battle.Winner.Name</span>
                    </td>
                    <td>@battle.BattleDate.ToString("g")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No battles recorded yet.</td>
            </tr>
        }
    </tbody>
</table>

